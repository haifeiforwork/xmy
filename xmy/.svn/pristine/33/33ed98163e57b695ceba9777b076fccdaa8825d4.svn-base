  	<!--@author hexw 查询活动商品  -->
	<select id="findActivityGoods" parameterType="com.appdev.db.common.CriteriaParameter" resultMap="ActivityGoodsResultMap">
		select  a.limit_id activityId,a.limit_num limitNum,a.all_num allNum,a.complete_num completeNum,b.id goodsId,b.name name
		from limit_goods a
		INNER JOIN goods b on  a.goods_id = b.id
		LEFT JOIN watermark_image c on  b.wm_id = c.id
		<if test="_parameter != null" >
		  <include refid="sqlcriteria.util.Example_Where_Clause" />
		</if>
		<if test="orderByClause != null" >
		  order by ${orderByClause}
		</if>
	</select>
  	
  	<!-- 查询用户参与活动的次数    @auther  hexw -->
	<select id="countLimitAcivity" parameterType="com.appdev.db.common.CriteriaParameter" resultType="Integer">
			select count(DISTINCT(a.id)) from `order` a LEFT JOIN order_goods b on a.id = b.order_id
			<if test="_parameter != null" ><include refid="sqlcriteria.util.Example_Where_Clause" /></if>
	</select>
	
	
	<!-- 查询用户购买同一个活动商品的数量    @auther  hexw -->
	<select id="countLimitAcivityGoodsNum" parameterType="com.appdev.db.common.CriteriaParameter" resultType="Integer">
			select b.num from `order` a 
			LEFT JOIN order_goods b on a.id = b.order_id
			<if test="_parameter != null" ><include refid="sqlcriteria.util.Example_Where_Clause" /></if>
	</select>
	
	<!-- 查询用户购买同一个活动商品的    @auther  hexw -->
	<select id="countLimitAcivityGoods" parameterType="com.appdev.db.common.CriteriaParameter" resultType="Integer">
			select count(b.id) from `order` a 
			LEFT JOIN order_goods b on a.id = b.order_id
			<if test="_parameter != null" ><include refid="sqlcriteria.util.Example_Where_Clause" /></if>
	</select>
	
	
	<!-- 上线活动 不包含跨境专区和企业定制的商品 -->
   <select id="findOnlineActivityGoods" parameterType="com.appdev.db.common.CriteriaParameter" resultMap="BaseResultMap" >
		select g.* from goods g 
		INNER JOIN goods_category gc on g.id = gc.goods_id
		inner join term_data td on gc.cid = td.id 
		inner join term_data parenttd on td.parent_id = parenttd.id and  parenttd.name !='跨境专区' and parenttd.name != '企业定制'
	   <if test="_parameter != null" >
	     <include refid="sqlcriteria.util.Example_Where_Clause" /></if>
	   <if test="orderByClause != null" >
	     order by ${orderByClause}
	   </if>
  </select>
  
  <!-- 上线活动 不包含跨境专区和企业定制的商品 -->
   <select id="findOnlineActivityGoodsByGoodsId" resultMap="BaseResultMap" >
		select g.* from goods g 
		INNER JOIN goods_category gc on g.id = gc.goods_id
		inner join term_data td on gc.cid = td.id 
		inner join term_data parenttd on td.parent_id = parenttd.id and  parenttd.name !='跨境专区' and parenttd.name != '企业定制'
	   <if test="id != null" >
	      where g.id=#{id}
	    </if>
   </select>
	
  <!-- 判断用户是否购买过该商品    @auther  hexw -->
