	/**
	 * 判断当前时间是否属于活动时间
	 * @return Integer 0：不在活动范围时间内 1.在活动范围时间内
	 * @author lij
	 * @date 2017年11月9日 下午2:47:53
	 */
	@Override
	public Integer checkDate(){
		Integer i = 0;
		//开始时间
		long begin = DateUtil.parse(beginTime).getTime();
		long end = DateUtil.parse(endTime).getTime();
		Date now = new Date();
		long nowTime = now.getTime();
		if(begin<nowTime){
			if(nowTime<end){
				i = 1;
			}
		}
		return i;
	}
