<%@include file="/WEB-INF/jsp/commons/nav/search_float_top.jsp" %>
<script type="text/javascript" src="resource/js/common/goods_search.js"></script>
<script type="text/javascript" src="resource/commons/js/foundation-datepicker.js"></script>
<script type="text/javascript" src="resource/js/pointStore/point-store.js"></script>
<script src="resource/js/common/menu.js"></script>
<script src="resource/commons/js/sli.js"></script>
<script type="text/javascript">
var isSign = "${status}";  //-1.未登录 0.没签过 1.签过
$("#sign").click(function(){
	if(isSign == 1){
		warnPop("今天您已经签到过了请明天再来！");
		return false;
	}
	$.ajax({
        url: "point/sign",
        type: "post",
        dataType: "text",
        contenttype :"application/x-www-form-urlencoded;charset=utf-8", 
        error: function(jqXHR, textStatus, errorMsg){
        	var btnFn = function(){
				easyDialog.close();
			  return false;
			};
        	easyDialog.open({
				  container : {
				    header : '提示',
				    content : '请先登录！',
				    yesFn : btnFn
				  }
				});
        },
        success: function (data,textStatus, jqXHR) {
        	$("#days").html(data);
        	$("#day").html(7-data);
        	var num=0;
        	var d=parseInt(data);
        	for(var i=d+1;i<8;i++){
        		num+=i*5;
        	}
        	$("#gain").html(num);
        	getPoints();
        	$("#sign").css({'background-color':'#666'});
        	$(".exp").animate({"top":"-15px"},1000).css({"opacity":"1","display":"block"});
        }
    });
})
initSign();
//初始化签到
function initSign(){
	if (isSign == 1) { //已签到过
		$("#sign").css({'background-color':'#666'});
		//$("#sign").unbind('click');
	} else {
		$.ajax({
			url:"point/initSing",
			type: "post",
			success: function (data) {
				$("#days").html(data);
	        	$("#day").html(7-data);
	        	var num=0;
	        	var d=parseInt(data);
	        	for(var i=d+1;i<8;i++){
	        		num+=i*5;
	        	}
	        	$("#gain").html(num);
	        	getPoints();
	        	
	        }
		})
	}
}
function getPoints(){
	$.ajax({
        url: "point/points",
        type: "post",
        dataType: "text",
        success: function (data,textStatus, jqXHR) {
        	$("#accPoints").html(data);
        }
    });
}


function warnPop(text){
	var btnFn = function(){
		easyDialog.close();
	  return false;
	};
	easyDialog.open({
		  container : {
		    header : '提示',
		    content : text,
		    yesFn : btnFn
		  }
		});
}
</script>
</body>
</html>
