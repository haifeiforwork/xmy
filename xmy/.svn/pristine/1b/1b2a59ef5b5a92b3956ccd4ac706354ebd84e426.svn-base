  <!-- @auth lij @creatTime 2017年8月1日17:22:12 查询全部商品销售排行的前2个商品的id -->
  <select id="findGoodsDeal" resultType="java.lang.Long" >
  	select goods_id from order_goods GROUP BY goods_id ORDER BY SUM(num) desc LIMIT 0,2
  </select>
  
