				   var time = $("#time").val();
				   var msg = $("#message").val();
				   try {
					   if (!time) {
					       throw "请选择推送时间";
					   }
					   if (!msg) {
						   throw "请填写推送内容";
					   }
				   } catch (e) {
					  tool.error(e);
					  return;
				   }
				  
				   $.post("push/add",{time:time,msg:msg},function(data){
					   if(data.resultCode == 200){
						   tool.info("添加成功！")
						   window.location.href="push/list";
						   layer.close(index); 
					   }else {
						   tool.error("添加失败！"+data.data);
					   }
				   });
				   
			   },
			   btn2:function(index, layero){
				   layer.close(index); 
			   }
