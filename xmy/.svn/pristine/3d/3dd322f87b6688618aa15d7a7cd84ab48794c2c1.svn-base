	/**
	 * 根据订单编号查询订单信息
	 * @param orderNo
	 * @return ResponseEntity<AppResp>
	 * @author lij
	 * @date 2018年1月24日 下午2:28:00
	 */
	@RequestMapping(value="/getOrder",method=RequestMethod.POST)
	@Exclusion
	public ResponseEntity<AppResp> getOrder(@RequestBody Order orderNo){
		List<Order> orderByOrderNo = appOrderService.getOrderByOrderNo(orderNo.getNo());
		if(ObjectUtils.isEmpty(orderByOrderNo)){
			throw new BusinessException("未查询到订单信息，请核实订单编号是否有误 !");
		}else{
			AppOutOrder outOrder = new AppOutOrder();
			Order order = orderByOrderNo.get(0);
			outOrder.setConsigneeAddress(order.getConsigneeAddress());
			outOrder.setConsigneeName(order.getConsigneeName());
			outOrder.setConsigneePhone(order.getConsigneePhone());
			outOrder.setNo(order.getNo());
			outOrder.setPayMoney(order.getTotal().subtract(order.getPay()));
			return AppResp.get(outOrder);
		}
	}
	
	
