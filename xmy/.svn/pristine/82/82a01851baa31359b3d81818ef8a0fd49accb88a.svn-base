  <script type="text/javascript">
//将商品移入收藏夹
	$("#bookMark").click(function(){
		var goodsId = $(this).attr("value");//商品id
		var categoryName = $(this).attr("tname");//商品分类名称
		//window.location.href = "/cart/addCollection/"+goodsId+"?categoryName="+categoryName;
		$.ajax({
			url:"cart/addCollection/"+goodsId+"?categoryName="+categoryName,
			type:"get",
			success:function(data){
				if(data == 0){//添加成功
					var btnFn = function(){
						easyDialog.close();
					}
					easyDialog.open({
						  container : {
						    header : '提示',
						    content : '已经加入收藏夹！',
						    yesFn : btnFn
						  }
						});
				}else{//商品已存在
					var btnFn = function(){
						easyDialog.close();
					}
					easyDialog.open({
						  container : {
						    header : '提示',
						    content : '已经加入收藏夹！',
						    yesFn : btnFn
						  }
						});
				}
			}
		})
	});
  </script>
