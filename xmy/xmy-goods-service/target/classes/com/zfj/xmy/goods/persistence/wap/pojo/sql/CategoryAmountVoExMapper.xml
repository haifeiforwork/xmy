<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.zfj.xmy.goods.persistence.wap.dao.CategoryAmountVoExMapper"  >
	
	<resultMap id="fullCategoryAmount" type="com.zfj.xmy.goods.persistence.wap.pojo.dto.CategoryAmountVo" >
		<id column="id" property="id" />
		<result column="goods_category_name" property="cateName" />
		<result column="amount" property="amount" />
	</resultMap>
	
	<select id="findCateAndAmount" parameterType="java.lang.Long" resultMap="fullCategoryAmount">
		SELECT
			id,
			goods_category_name,
			count(*) amount
		FROM
			(
				SELECT
					user_id,
					goods_category_name,
					goods_id
				FROM
					collection_goods
				WHERE
					user_id = #{id}
			) cg
		JOIN goods g ON cg.goods_id = g.id
		AND g.is_putway = 0
		GROUP BY
			user_id,
			goods_category_name
	</select>
	
</mapper>