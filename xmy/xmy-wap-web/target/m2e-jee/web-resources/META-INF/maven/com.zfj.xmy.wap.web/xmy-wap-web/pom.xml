<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
  	<artifactId>xmy</artifactId>
  	<groupId>com.zfj.xmy</groupId>
  	<version>0.0.1-SNAPSHOT</version>
  </parent>
  <groupId>com.zfj.xmy.wap.web</groupId>
  <artifactId>xmy-wap-web</artifactId>
  <packaging>war</packaging>

  <name>xmy-wap-web</name>
  <url>http://maven.apache.org</url>
  
  <dependencies>
  
  	<dependency>
        <groupId>com.zfj.xmy.activity</groupId>
  		<artifactId>xmy-activity-service</artifactId>
    </dependency> 
  	<dependency>
       	<groupId>com.zfj.xmy.comment</groupId>
  		<artifactId>xmy-comment-service</artifactId>
    </dependency> 
  	<dependency>
        <groupId>com.zfj.xmy.goods</groupId>
  		<artifactId>xmy-goods-service</artifactId>
    </dependency> 
  	<dependency>
        <groupId>com.zfj.xmy.order</groupId>
  		<artifactId>xmy-order-service</artifactId>
    </dependency> 
  	<dependency>
        <groupId>com.zfj.xmy.pay</groupId>
  		<artifactId>xmy-pay-service</artifactId>
    </dependency> 
  	<dependency>
        <groupId>com.zfj.xmy.user</groupId>
  		<artifactId>xmy-user-service</artifactId>
    </dependency> 
    
  	<dependency>
        <groupId>jstl</groupId>
        <artifactId>jstl</artifactId>
    </dependency>  	
    <dependency>
	    <groupId>commons-fileupload</groupId>
	    <artifactId>commons-fileupload</artifactId>
	</dependency>
	<dependency>
	    <groupId>com.fasterxml.jackson.core</groupId>
	    <artifactId>jackson-databind</artifactId>
	</dependency>
	<dependency>
	    <groupId>com.fasterxml.jackson.core</groupId>
	    <artifactId>jackson-core</artifactId>
	</dependency>
	<dependency>
	    <groupId>com.fasterxml.jackson.core</groupId>
	    <artifactId>jackson-annotations</artifactId>
	</dependency>	
	<dependency>
	    <groupId>javax</groupId>
	    <artifactId>javaee-api</artifactId>
	    <scope>provided</scope>
	</dependency>		
  </dependencies>
  
  <build>
  	<plugins>
  		<plugin>
  			<artifactId>maven-compiler-plugin</artifactId>
  		</plugin>
  		<plugin>
  			<artifactId>maven-resources-plugin</artifactId>
  		</plugin>
  		<plugin>
  			<artifactId>maven-source-plugin</artifactId>
  		</plugin>  
  		<plugin>
			<artifactId>maven-dependency-plugin</artifactId>
			<executions>
				<execution>
				    <phase>prepare-package</phase>
					<goals>
						<goal>unpack</goal>
					</goals>
				</execution>
			</executions>
			<configuration>
				<artifactItems>
				    <artifactItem>
				        <groupId>com.zfj.xmy.activity</groupId>
				  		<artifactId>xmy-activity-service</artifactId>
				    </artifactItem>
				    <artifactItem>
				        <groupId>com.zfj.xmy.comment</groupId>
						<artifactId>xmy-comment-service</artifactId>
				    </artifactItem>
				    <artifactItem>
				        <groupId>com.zfj.xmy.goods</groupId>
  						<artifactId>xmy-goods-service</artifactId>
				    </artifactItem>
				    <artifactItem>
				        <groupId>com.zfj.xmy.order</groupId>
  						<artifactId>xmy-order-service</artifactId>
				    </artifactItem>
				    <artifactItem>
				        <groupId>com.zfj.xmy.user</groupId>
  					    <artifactId>xmy-user-service</artifactId>
				    </artifactItem>
					<artifactItem>
						<groupId>com.zfj.xmy.pay</groupId>
						<artifactId>xmy-pay-service</artifactId>
					</artifactItem>
					<artifactItem>
						<groupId>com.zfj.xmy.common</groupId>
			  		    <artifactId>xmy-common-service</artifactId>
			  		</artifactItem>
				</artifactItems>
				<outputDirectory>target/${name}-${xmy.version}/WEB-INF/classes</outputDirectory>
				<includeScope>complie</includeScope>
			</configuration>   
		  </plugin>
  	</plugins>
  	<resources>
  	    <resource>
             <directory>src/main/resources/${profiles.active}</directory>
        </resource>
  	    <resource>
             <directory>src/main/resources</directory>
             <excludes>
                    <exclude>test/*</exclude>
                    <exclude>pro/*</exclude>
                    <exclude>dev/*</exclude>
             </excludes>
        </resource>
  	</resources>
  </build>
  <profiles>
    <profile>
        <!-- 本地环境 -->
        <id>dev</id>
        <properties>
            <profiles.active>dev</profiles.active>
        </properties>
        <activation>
            <activeByDefault>true</activeByDefault>
        </activation>
    </profile>
    <profile>
        <!-- 正式环境 -->
        <id>pro</id>
        <properties>
            <profiles.active>pro</profiles.active>
        </properties>
    </profile>
    <profile>
        <!-- 测试环境 -->
        <id>test</id>
        <properties>
            <profiles.active>test</profiles.active>
        </properties>
    </profile>
  </profiles>
</project>
